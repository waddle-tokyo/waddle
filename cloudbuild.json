{
	"steps": [
		{
			"name": "bash",
			"script": "#!/usr/bin/env bash\necho \"$BACKEND_CONFIG_JSONC\" > backend/conf.jsonc\n"
		},
		{
			"name": "gcr.io/cloud-builders/docker",
			"args": [
				"build",
				"-f",
				"Dockerfile-backend",
				"-t",
				"$DOCKER_REGION-docker.pkg.dev/$PROJECT_ID/docker-$DOCKER_REGION/$DOCKER_CONTAINER:$COMMIT_SHA",
				"-t",
				"$DOCKER_REGION-docker.pkg.dev/$PROJECT_ID/docker-$DOCKER_REGION/$DOCKER_CONTAINER:latest",
				"."
			]
		},
		{
			"name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
			"entrypoint": "gcloud",
			"args": [
				"compute",
				"instance-templates",
				"create-with-container",
				"$DOCKER_CONTAINER-$SHORT_SHA",
				"--project=$PROJECT_ID",
				"--machine-type=e2-micro",
				"--network-interface=network=default,network-tier=STANDARD",
				"--maintenance-policy=MIGRATE",
				"--tags=http-server,https-server,lb-health-check",
				"--service-account=$TEMPLATE_SERVICE_ACCOUNT",
				"--container-image=$DOCKER_REGION-docker.pkg.dev/$PROJECT_ID/docker-$DOCKER_REGION/$DOCKER_CONTAINER:$COMMIT_SHA",
				"--container-restart-policy=always",
				"--container-command=yarn",
				"--container-arg=run",
				"--container-arg=serve",
				"--scopes=cloud-platform,default,compute-rw,storage-rw"
			]
		},
		{
			"name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
			"entrypoint": "gcloud",
			"args": [
				"compute",
				"instance-groups",
				"managed",
				"rolling-action",
				"start-update",
				"$INSTANCE_GROUP",
				"--version=template=$DOCKER_CONTAINER-$SHORT_SHA",
				"--zone=$INSTANCE_ZONE"
			]
		}
	],
	"options": {
		"automapSubstitutions": true
	},
	"images": [
		"$DOCKER_REGION-docker.pkg.dev/$PROJECT_ID/$DOCKER_REGION/$DOCKER_CONTAINER"
	],
	"logsBucket": "$LOGS_BUCKET"
}
